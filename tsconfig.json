{
  "compilerOptions": {
    "strict": false,
    "target": "ES6",
    "module": "ES6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/js",
    "rootDir": "./src",
    "typeRoots": [ "node_modules/@types" ]
  },
  "include": ["src/*", "manifest.json"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
